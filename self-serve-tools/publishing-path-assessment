    <!-- Live region for screen reader announcements -->
    <div aria-live="polite" id="status-updates" class="sr-only"></div>

    <script>
        let currentSection = 1;
        let totalQuestions = 20;
        let answeredQuestions = 0;

        // Initialize the assessment
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            attachEventListeners();
        });

        function attachEventListeners() {
            // Add event listeners to all radio buttons
            document.querySelectorAll('input[type="radio"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    updateQuestionStatus(this);
                    updateProgress();
                    announceProgress();
                });
            });

            // Add click listeners to option divs (but not the labels to avoid double-clicking)
            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', function(e) {
                    // Only trigger if clicking the div itself, not the radio or label
                    if (e.target === this) {
                        const radio = this.querySelector('input[type="radio"]');
                        if (radio) {
                            radio.checked = true;
                            radio.dispatchEvent(new Event('change'));
                        }
                    }
                });
            });
        }

        function updateQuestionStatus(radio) {
            // Mark question as answered
            const question = radio.closest('.question');
            question.classList.add('answered');

            // Update selected option styling
            const allOptions = question.querySelectorAll('.option');
            allOptions.forEach(opt => opt.classList.remove('selected'));
            radio.closest('.option').classList.add('selected');
        }

        function updateProgress() {
            // Count answered questions
            answeredQuestions = 0;
            for (let i = 1; i <= totalQuestions; i++) {
                if (document.querySelector(`input[name="q${i}"]:checked`)) {
                    answeredQuestions++;
                }
            }

            // Update progress bar
            const percentage = (answeredQuestions / totalQuestions) * 100;
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            
            progressFill.style.width = percentage + '%';
            progressText.textContent = `${answeredQuestions} of ${totalQuestions} questions completed`;
            progressText.setAttribute('aria-valuenow', answeredQuestions);
        }

        function announceProgress() {
            // Announce progress to screen readers
            const statusElement = document.getElementById('status-updates');
            statusElement.textContent = `Question answered. ${answeredQuestions} of ${totalQuestions} questions completed.`;
        }

        function validateSection(sectionNum) {
            let questionsInSection;
            if (sectionNum === 1) {
                questionsInSection = [1, 2, 3, 4, 5, 6, 7, 8];
            } else if (sectionNum === 2) {
                questionsInSection = [9, 10, 11, 12, 13, 14];
            } else if (sectionNum === 3) {
                questionsInSection = [15, 16, 17, 18, 19, 20];
            }

            for (let qNum of questionsInSection) {
                if (!document.querySelector(`input[name="q${qNum}"]:checked`)) {
                    return false;
                }
            }
            return true;
        }

        function nextSection(sectionNum) {
            if (!validateSection(sectionNum)) {
                const errorElement = document.getElementById(`error${sectionNum}`);
                errorElement.style.display = 'block';
                errorElement.focus();
                return;
            }

            document.getElementById(`error${sectionNum}`).style.display = 'none';
            document.getElementById(`section${sectionNum}`).classList.remove('active');
            document.getElementById(`section${sectionNum + 1}`).classList.add('active');
            currentSection = sectionNum + 1;

            // Announce section change to screen readers
            const statusElement = document.getElementById('status-updates');
            statusElement.textContent = `Moved to section ${currentSection}`;

            // Scroll to top of assessment
            scrollToTop();
        }

        function prevSection(sectionNum) {
            document.getElementById(`section${sectionNum}`).classList.remove('active');
            document.getElementById(`section${sectionNum - 1}`).classList.add('active');
            currentSection = sectionNum - 1;

            // Announce section change to screen readers
            const statusElement = document.getElementById('status-updates');
            statusElement.textContent = `Moved to section ${currentSection}`;

            // Scroll to top of assessment
            scrollToTop();
        }

        function scrollToTop() {
            // Scroll to the main content
            const mainContent = document.getElementById('main-content');
            if (mainContent) {
                mainContent.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        function calculateResults() {
            if (!validateSection(3)) {
                const errorElement = document.getElementById('error3');
                errorElement.style.display = 'block';
                errorElement.focus();
                return;
            }

            let independentPoints = 0;

            // Calculate score: A=3, B=1, C=1, D=3 (adjusted scoring for balanced results)
            for (let i = 1; i <= totalQuestions; i++) {
                const selectedOption = document.querySelector(`input[name="q${i}"]:checked`);
                if (selectedOption) {
                    independentPoints += parseInt(selectedOption.value);
                }
            }

            // Total possible: 60 points (20 questions × 3 points max)
            // Convert to percentage for cleaner logic
            const percentage = (independentPoints / 60) * 100;

            let recommendation, description, nextSteps, keyStrengths, challenges;

            if (percentage >= 80) { // 48+ points
                recommendation = "Independent Publishing Strongly Recommended";
                description = "Your assessment results show exceptional alignment with independent publishing success. You have the financial resources, marketing capabilities, business knowledge, and mindset needed to thrive as an independent publisher.";
                
                keyStrengths = `
                    <strong>Your Key Strengths:</strong>
                    <br>• Strong financial foundation with adequate marketing budget
                    <br>• Solid marketing experience and audience-building capabilities  
                    <br>• Business operations knowledge and industry connections
                    <br>• High risk tolerance and independent decision-making preference
                    <br>• Game and market factors favor independent approach
                `;
                
                challenges = `
                    <strong>Potential Challenges to Watch:</strong>
                    <br>• Maintaining momentum during slow periods
                    <br>• Scaling marketing efforts as you grow
                    <br>• Staying current with platform changes and industry trends
                `;
                
                nextSteps = `
                    <strong>Your Action Plan:</strong>
                    <br><br><strong>Immediate Priorities:</strong>
                    <br>• Finalize your marketing budget allocation across channels
                    <br>• Set up analytics and tracking systems for all marketing efforts
                    <br>• Create content calendar for pre-launch marketing
                    <br>• Establish your brand voice and visual identity
                    <br><br><strong>Build Momentum:</strong>
                    <br>• Launch community building on your strongest platform
                    <br>• Start building email list with valuable content
                    <br>• Create demo/trailer and gather feedback
                    <br>• Research and connect with relevant influencers in your genre
                    <br><br><strong>Launch Preparation:</strong>
                    <br>• Implement feedback and polish your game's presentation
                    <br>• Plan and execute pre-launch marketing campaign
                    <br>• Finalize platform submissions and store pages
                    <br>• Prepare launch day strategy and post-launch support plan
                `;
                
            } else if (percentage >= 60) { // 36+ points
                recommendation = "Independent Publishing Recommended";
                description = "Your results indicate strong potential for independent publishing success. While you have most of the foundations in place, there are a few areas where focused development will significantly improve your chances of success.";
                
                keyStrengths = `
                    <strong>Your Key Strengths:</strong>
                    <br>• Good foundation in most critical areas
                    <br>• Willingness to learn and adapt
                    <br>• Reasonable risk tolerance for independent path
                    <br>• Game characteristics support independent approach
                `;
                
                challenges = `
                    <strong>Areas for Development:</strong>
                    <br>• May need to strengthen marketing skills or budget
                    <br>• Business operations knowledge could be expanded
                    <br>• Platform relationships and industry connections need building
                    <br>• Risk mitigation strategies should be developed
                `;
                
                nextSteps = `
                    <strong>Your Development & Launch Strategy:</strong>
                    <br><br><strong>Skill Building Phase:</strong>
                    <br>• Identify your weakest areas from the assessment
                    <br>• Take online courses in marketing, business ops, or platform relations
                    <br>• Join indie developer communities and networking groups
                    <br>• Start small with social media presence to practice marketing
                    <br><br><strong>Foundation Building:</strong>
                    <br>• Implement what you've learned with consistent content creation
                    <br>• Build relationships with other developers and potential collaborators
                    <br>• Create detailed budget and launch plan for your project
                    <br>• Develop backup plans for potential challenges
                    <br><br><strong>Execution Phase:</strong>
                    <br>• Launch pre-marketing campaign with improved skills
                    <br>• Execute platform submissions and community engagement
                    <br>• Monitor results and adjust strategy based on performance
                    <br>• Prepare for launch with comprehensive marketing plan
                `;
                
            } else if (percentage >= 40) { // 24+ points
                recommendation = "Both Paths Could Work - Choose Based on Priorities";
                description = "You're in a unique position where both independent publishing and publisher partnerships could lead to success. Your choice should depend on your priorities, timeline, and willingness to develop certain skills.";
                
                keyStrengths = `
                    <strong>Factors Supporting Independent Publishing:</strong>
                    <br>• Some marketing experience and business knowledge
                    <br>• Reasonable financial stability
                    <br>• Creative control preferences
                    <br><br><strong>Factors Supporting Publisher Partnership:</strong>
                    <br>• Could benefit from professional marketing expertise
                    <br>• Industry connections would accelerate growth
                    <br>• Risk mitigation through experienced guidance
                `;
                
                challenges = `
                    <strong>Decision Framework:</strong>
                    <br><br><strong>Choose Independent If:</strong>
                    <br>• Creative control is non-negotiable
                    <br>• You enjoy learning business/marketing skills
                    <br>• You have time for skill development
                    <br>• Your game has strong niche appeal
                    <br><br><strong>Choose Publisher If:</strong>
                    <br>• You want to focus primarily on development
                    <br>• Your game needs broad market reach
                    <br>• You prefer lower-risk approach
                    <br>• Timeline pressure requires faster market entry
                `;
                
                nextSteps = `
                    <strong>Dual-Track Strategy (Choose Your Path):</strong>
                    <br><br><strong>If Going Independent:</strong>
                    <br>• Invest heavily in marketing education and skill development
                    <br>• Build emergency fund for extended runway
                    <br>• Start networking and building industry relationships now
                    <br>• Create detailed launch plan with multiple backup strategies
                    <br><br><strong>If Seeking Publisher:</strong>
                    <br>• Research publishers who work with games like yours
                    <br>• Prepare professional pitch materials and demo
                    <br>• Document your development process professionally
                    <br>• Build small community to show engagement potential
                    <br><br><strong>Smart Approach:</strong>
                    <br>Start with independent community building while researching publishers. This gives you options and makes you more attractive to potential partners.
                `;
                
            } else if (percentage >= 20) { // 12+ points
                recommendation = "Publisher Partnership Recommended";
                description = "Your assessment indicates that partnering with a publisher aligns well with your current situation, goals, and resources. A good publisher partnership will complement your strengths while filling critical gaps in marketing, business operations, and industry connections.";
                
                keyStrengths = `
                    <strong>Your Key Strengths:</strong>
                    <br>• Strong game development focus and skills
                    <br>• Realistic assessment of current capabilities
                    <br>• Openness to collaboration and external expertise
                    <br>• Understanding of areas where you need support
                `;
                
                challenges = `
                    <strong>Areas Where Publisher Adds Value:</strong>
                    <br>• Marketing budget and campaign expertise
                    <br>• Established platform relationships and industry connections
                    <br>• Business operations and contract negotiation
                    <br>• Market positioning and timing strategy
                    <br>• Risk mitigation through experienced guidance
                `;
                
                nextSteps = `
                    <strong>Your Publisher Partnership Strategy:</strong>
                    <br><br><strong>Preparation Phase:</strong>
                    <br>• Research publishers who work with games in your genre/scope
                    <br>• Create professional pitch deck with game vision, target audience, and current progress
                    <br>• Develop playable demo that showcases your game's core appeal
                    <br>• Document your development process, timeline, and team capabilities
                    <br><br><strong>Outreach Phase:</strong>
                    <br>• Prioritize 10-15 publishers based on fit and reputation
                    <br>• Craft personalized pitches explaining why you're a good match
                    <br>• Attend industry events, join developer communities, get introductions
                    <br>• Prepare for publisher meetings with clear questions about their process
                    <br><br><strong>Evaluation Phase:</strong>
                    <br>• Compare offers based on more than just advance money
                    <br>• Evaluate marketing support, platform relationships, and team expertise
                    <br>• Negotiate terms that preserve your creative vision while leveraging their strengths
                    <br>• Plan collaboration workflow and communication structure
                `;
                
            } else { // 0-11 points
                recommendation = "Publisher Partnership Strongly Recommended";
                description = "Your results clearly indicate that partnering with an experienced publisher is the optimal path for your game's success. This isn't a limitation—it's a strategic advantage that lets you focus on what you do best while leveraging professional expertise for everything else.";
                
                keyStrengths = `
                    <strong>Your Key Strengths:</strong>
                    <br>• Game development passion and creativity
                    <br>• Self-awareness about areas needing support
                    <br>• Flexibility and openness to collaboration
                    <br>• Focus on creating great games rather than business operations
                `;
                
                challenges = `
                    <strong>Critical Gaps Publishers Fill:</strong>
                    <br>• Marketing budget and professional campaign management
                    <br>• Industry relationships and platform expertise
                    <br>• Business operations, legal, and financial management
                    <br>• Market research and positioning strategy
                    <br>• Risk mitigation and professional guidance
                `;
                
                nextSteps = `
                    <strong>Your Publisher-First Strategy:</strong>
                    <br><br><strong>Foundation Building:</strong>
                    <br>• Focus on polishing your game's core experience and appeal
                    <br>• Create compelling screenshots, GIFs, and video content
                    <br>• Write clear, concise game description and unique selling points
                    <br>• Organize all development materials professionally
                    <br><br><strong>Publisher Research:</strong>
                    <br>• Study publishers who've successfully launched games like yours
                    <br>• Read developer testimonials and case studies
                    <br>• Understand different publisher models (funding, revenue share, services)
                    <br>• Identify 20+ potential publishers and prioritize by fit
                    <br><br><strong>Professional Presentation:</strong>
                    <br>• Create professional pitch materials highlighting your game's appeal
                    <br>• Develop playable demo that immediately shows your game's value
                    <br>• Prepare development timeline and budget requirements
                    <br>• Practice your pitch and prepare for publisher questions
                    <br><br><strong>Partnership Development:</strong>
                    <br>• Begin outreach to prioritized publishers with personalized pitches
                    <br>• Attend industry events and conferences to build relationships
                    <br>• Evaluate partnership offers holistically, not just on financial terms
                    <br>• Negotiate agreements that align with your creative vision and goals
                `;
            }

            // Display results
            document.getElementById('recommendation').textContent = recommendation;
            document.getElementById('description').textContent = description;
            document.getElementById('nextSteps').innerHTML = `
                ${keyStrengths}
                <br><br>${challenges}
                <br><br>${nextSteps}
                <br><br><strong>Remember:</strong> This assessment provides guidance based on your current situation. Your path can evolve as you grow, learn, and adapt. The most important thing is taking action aligned with your strengths while addressing your development areas.
            `;

            // Show results section
            document.getElementById('section3').classList.remove('active');
            document.getElementById('results').classList.add('active');

            // Announce results to screen readers
            const statusElement = document.getElementById('status-updates');
            statusElement.textContent = `Assessment complete. Your recommendation: ${recommendation}`;

            // Scroll to top of assessment
            scrollToTop();
        }

        function restartAssessment() {
            // Reset all radio buttons
            document.querySelectorAll('input[type="radio"]').forEach(radio => {
                radio.checked = false;
            });

            // Reset all question styling
            document.querySelectorAll('.question').forEach(question => {
                question.classList.remove('answered');
            });

            // Reset all option styling
            document.querySelectorAll('.option').forEach(option => {
                option.classList.remove('selected');
            });

            // Hide all error messages
            document.querySelectorAll('.error-message').forEach(error => {
                error.style.display = 'none';
            });

            // Show first section
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById('section1').classList.add('active');

            // Reset variables
            currentSection = 1;
            answeredQuestions = 0;

            // Update progress
            updateProgress();

            // Announce restart to screen readers
            const statusElement = document.getElementById('status-updates');
            statusElement.textContent = 'Assessment restarted. Back to section 1.';

            // Scroll to top of assessment
            scrollToTop();
        }
    </script>
</body>
</html>
